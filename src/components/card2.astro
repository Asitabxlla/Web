---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;


---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		align-items: center;
		text-align: center;
		width: 180%;
		height: 80%;
		background-repeat: no-repeat;
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: url("/portfolio.jpg")  ;
		background-color: #fff6f6fb;
		background-size: 110%;
		border-radius: 10px;
		background-position: 100%;
		transition: transform 1.2s ease-in-out;
		border: 2px solid #FF5151;
	}
	.link-card > a {
		font: 1em "Jura", sans-serif;
		width: 200%;
		height: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: rgb(255, 255, 255);
		background-color: #241f3579;
		opacity: 0.9;
	}
	h2 {
		margin-top: 15%;
		font-size: 2.50rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	
    .link-card:is(:hover, :focus-within) {
		background: linear-gradient(to left, #0351f8a6, #ff2024b6), url("/portfolio.jpg") no-repeat top center;
		opacity: 0.9;
        background-attachment: fixed;
		transition: transfom 0.6s;
		transform: scale(1.04);

	}
	.link-card:is(:hover, :focus-within) h2 {
	
    }
</style>