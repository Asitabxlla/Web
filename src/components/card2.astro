---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;


---


<li class="card w-100 bg-base-100 shadow-xl image-full">
    <img src="/Miku.jpg" alt="Miku" />
    <a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
      </div>
    </div>
</li>

<style>     
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }
    img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    h2 {
        margin: 0;
        padding: 1rem;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-primary);
        background-color: var(--color-secondary);
    }
    h2 span {
        float: right;
        font-size: 1.5rem;
    }
    p {
        padding: 1rem;
        font-size: 1.2rem;
        color: var(--color-primary);
    }

