---

interface Props {
	title: string;
    img: string;
    h5 : string;
}

const { img, title, h5} = Astro.props;
---

<div class="card lg:card-side bg-secondary shadow-xl border-primary border-2 rounded-md overflow-hidden flex flex-col ">
    <div class="flex justify-center">
        <img class="" src={img} alt="lineart" />
    </div>   
    <div class="card-body">
        <h2 class="card-title text-4xl">{title}</h2>
        <div class="divider divider-primary"></div>
        <ul class="text-white text-3xl list-none">
                <li>Extra character: + 80% original price</li>
                <li>Complicated details or background: +15â‚¬</li>
                <li>Maximum characters per piece: 3</li>
        </ul>
      <h5 class="text-white text-4xl flex justify-end">{h5}</h5>
    </div>
</div>
