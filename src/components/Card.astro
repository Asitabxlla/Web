---

interface Props {
	title: string;
	p: string;
    img: string;
    span : string;
}

const { img, p, title, span} = Astro.props;
---

<div class="card lg:card-side bg-base-100 shadow-xl border border-primary border-2">
    <img class="p-5 rounded-t-lg object-cover h-xl w-auto" src={img} alt="" />
    <div class="card-body">
        <h2 class="card-title text-4xl">{title}</h2>
        <div class="divider divider-primary"></div>
      <p>{p}</p>
    </div>
  </div>
