---

interface Props {
	title: string;
	p: string;
  img: string;
  span : string;
}

const { img, p, title, span} = Astro.props;
---

<div class="w-full max-w-xl bg-secondary border-primary border-2 rounded-lg shadow ">
      <img class="p-8 rounded-t-lg" src={img} alt="" />
  <div class="px-5 pb-5">
      <a>
          <h5 class="text-xl font-semibold tracking-tight text-white">{title}</h5>
      </a>
      <div class="divider divider-primary"></div>
      <div class="flex items-center justify-between">
          <p>{p}</p>
          <span class="text-4xl font-bold text-white">{span}</span>
      </div>
  </div>
</div>
