--- 
import Header from '../components/Header.astro';
import LayoutRefs from '../layouts/LayoutRefs.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';
---

<LayoutRefs title="Lineart">
     <Header />
        <body class="bg-scroll">
            <a href="/commissions" class="">
                 <button class="btn1 text-white bg-primary rounded-md ml-40 my-10 shadow-xl hover:bg-accent hover:text-white">
                    <img src="back.svg" class="h-8" alt="back svg">Commissions</img>
                </button>
            </a> 
            
            <div class="m-5 grid grid-row-3 gap-10 ">
                <Card
                title='Bust Lineart'
                img='bustline.png'
                h5='10€'
                li1='Extra character: + 80% original price'
                li2='Complicated details or background: +15€'
                li3='Maximum characters per piece: 3'
                />
                <Card
                title='Half Body Lineart'
                img='halfline.png'
                h5='15€'
                li1='Extra character: + 80% original price'
                li2='Complicated details or background: +15€'
                li3='Maximum characters per piece: 3'
                />
                <Card
                title='Full Body Lineart'
                img='fullline.png'
                h5='25€'
                li1='Extra character: + 80% original price'
                li2='Complicated details or background: +15€'
                li3='Maximum characters per piece: 3'
                />
            </div>
        </body> 
        <footer>
            <Footer />  
        </footer> 
</LayoutRefs>
